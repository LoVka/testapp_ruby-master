<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Category:</strong>
  <%= @post.category.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.full_name %>
</p>


<% if @lists.present? %>
  <p>
    <strong>Editorial Lists:</strong>
    <ul>
    <% @lists.each do |list| %>
      <li><%= list %></li>
    <% end %>
    </ul>
  </p>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
