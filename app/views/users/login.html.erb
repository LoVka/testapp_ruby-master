<p id="alert"><%= alert %></p>

<%= form_tag("/login", method: "post") do %>
	<div class="field">
		<%= label_tag(:email, "Email") %>
		<%= text_field_tag(:email) %>
	</div>

	<div class="field">
		<%= label_tag(:password, "Password") %>
		<%= password_field_tag(:password) %>
	</div>

	<div class="actions">
		<%= submit_tag("Login!!!") %>
	</div>
<% end %>
