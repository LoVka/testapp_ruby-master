<!DOCTYPE html>
<html>
  <head>
    <title>Testapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'public', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
		<div id="title">
			<div id="menu">
				<ul>
					<%= link_to('Home', '/') %>
					<% if user && (user.admin? || user.role == 'manager') %><li><%= link_to 'Categories', '/categories' %></li><% end %>
					<% if user && (user.admin? || user.role == 'manager') %><li><%= link_to 'Editorial lists', '/editorial_lists' %></li><% end %>
					<% if user && (user.admin? || user.role == 'manager' || user.role == 'user') %><li><%= link_to 'Posts', '/posts' %></li><% end %>
					<% if user && user.admin? %><li><%= link_to 'Users', '/users' %></li><% end %>
				</ul>
			</div>
			<div id="user">
				<% if current_user %>
					Hello, <%= current_user.full_name %>, <%= link_to 'Logout', '/logout' %>
				<% else %>
					<%= link_to 'Login', '/login' %>
				<% end %>
			</div>
		</div>

		<div id="main">
			<div id="categories">
				<ul>
					<% @categories.each do |category| %>
					<li><%= link_to(category.name, "/#{category.slug}") %></li>
					<% end %>
				</ul>
			</div>

			<%= yield %>
		</div>

  </body>
</html>
