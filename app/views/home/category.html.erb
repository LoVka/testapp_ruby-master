<%= render 'categories' %>
<div id="content">
  <h2><%= @category.name %></h2>

  <div class="posts">
    <% @category.posts.limit(15).each do |post| %>
      <div class="post">
        <h3><%= link_to(post.title, "/#{post.category.slug}/#{post.id}") %></h3>

        <div class="body">
          <%= @markdown.render(post.lead).html_safe %>
        </div>
      </div>
    <% end %>
  </div>
</div>
